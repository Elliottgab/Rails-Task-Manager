<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>

<h4><%= link_to "Back to list", tasks_path %></h4>

<h4><%= link_to "Edit this task", edit_path %></h4>

<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
